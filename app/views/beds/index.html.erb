<p id="notice"><%= notice %></p>

<h1>Beds</h1>

<table>
  <thead>
    <tr>
      <th>Room</th>
      <th>Vacant</th>
      <th>Price</th>
      <th>Tier</th>
      <th>Hospital</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @beds.each do |bed| %>
      <tr>
        <td><%= bed.room %></td>
        <td><%= bed.vacant %></td>
        <td><%= bed.price %></td>
        <td><%= bed.tier %></td>
        <td><%= bed.hospital_id %></td>
        <td><%= link_to 'Show', bed %></td>
        <td><%= link_to 'Edit', edit_bed_path(bed) %></td>
        <td><%= link_to 'Destroy', bed, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

